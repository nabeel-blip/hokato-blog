<style>
table {
  border-collapse: collapse;
  width: 100%;
}

th, td {
  padding: 8px;
  text-align: left;
  border-bottom: 1px solid #ddd;
}
</style>
<h1>Article Listing Page</h1>

<table >
    <thead>
        <tr>
            <th> Title</th>
            <th> Description</th>
            <th> Author</th>
            <th> Action</th>
        </tr>
    </thead>

    <tbody>

    <% @articles.each do |article|%>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><%= article.author %></td> 
            <td>place holder</td>
        </tr>
    <%end %>
    
    </tbody>

</table>